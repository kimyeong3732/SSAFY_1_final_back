<?xml version="1.0" encoding="UTF-8"?>
<!-- spring boot 에게 mybatis 설정하고 전달 -->
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="callSettersOnNulls" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/><!-- user_id => userId first_name => firstName -->
    </settings>

    <mappers>
        <mapper resource="mapper/board_query.xml" />
        <mapper resource="mapper/login_query.xml" /> 
        <mapper resource="mapper/user_query.xml" /><!-- 
        <mapper resource="mapper/sido_query.xml" /> -->
    </mappers>
</configuration>