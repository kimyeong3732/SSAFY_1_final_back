<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mycom.springboot.user.dao.UserDao">

    <insert id="userRegister" parameterType="com.mycom.springboot.user.dto.UserDto">
        INSERT INTO users
        (
        user_name, user_password, user_email, user_register_date
        )
        VALUES
        (
            #{userName}, #{userPassword}, #{userEmail}, now()
        )
    </insert>
    
    <select id="getSeq" parameterType="com.mycom.springboot.user.dto.UserDto" resultType="int">
        SELECT user_seq
          FROM users
         WHERE user_email = #{userEmail}
    </select>
    
    <select id="getImg" parameterType="int" resultType="String">
        SELECT file_uuid
          FROM user_file
         WHERE user_seq = #{userSeq}
    </select>
    
    <insert id="setImg" parameterType="int">
        INSERT INTO user_file
        (
        user_seq,
        file_uuid,
        file_name
        )
        VALUES
        (
            #{userSeq},
            "noProfile.png",
            "noProfile.png"
        )
    </insert>
    
    <update id="userUpdate" parameterType="com.mycom.springboot.user.dto.UserDto">
    	UPDATE users SET user_name = #{userName}, user_password = #{userPassword}, 
    		user_message = #{userMessage}
    	WHERE user_email = #{userEmail}
    </update>

	<delete id="userDelete">
		DELETE FROM users
		WHERE user_seq = #{userSeq}
	</delete>
	
	<update id="updateImg" parameterType="com.mycom.springboot.user.dto.UserFileDto">
        update user_file set file_name = #{fileName}, file_size = #{fileSize}, file_content_type = #{fileContentType}, file_uuid = #{fileUUID}
         where user_seq = #{userSeq}
    </update>
    
    <select id="getUserBoard" parameterType="int" resultType="int">
        SELECT board_id
          FROM board
         WHERE user_seq = #{userSeq}
    </select>
    
    <delete id="deleteBoard" parameterType="int">
    	delete from board
    	 where user_seq = #{userSeq}
    </delete>
    
    <delete id="deleteBoardFile" parameterType="int">
    	delete from board_file
    	 where board_id = #{boardId}
    </delete>
    
    <delete id="deleteBoardUser" parameterType="int">
    	delete from board_user_read
    	 where user_seq = #{userSeq}
    </delete>
    
    <delete id="deleteFavorite" parameterType="int">
    	delete from favorite_place
    	 where user_seq = #{userSeq}
    </delete>
    
    <delete id="deletePrev" parameterType="int">
    	delete from prev_place
    	 where user_seq = #{userSeq}
    </delete>
    
    <delete id="deleteFriend" parameterType="int">
    	delete from friendship
    	 where user_seq = #{userSeq} or friend_seq = #{userSeq}
    </delete>
    
    <delete id="deleteUserFile" parameterType="int">
    	delete from user_file
    	 where user_seq = #{userSeq}
    </delete>
    
    <delete id="deleteUser" parameterType="int">
    	delete from users
    	 where user_seq = #{userSeq}
    </delete>

</mapper>